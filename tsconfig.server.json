{
    "compilerOptions": {
      "target": "ES6",              // Modern JavaScript
      "module": "CommonJS",         // Use CommonJS for Node.js compatibility
      "outDir": "./dist/server",    // Output compiled files here
      "rootDir": "./server",        // Root directory for server source code
      "strict": true,               // Enable strict type checking
      "esModuleInterop": true,      // Allow CommonJS interop
      "skipLibCheck": true          // Skip type checks for node_modules
    },
    "include": ["server/**/*"],
    "exclude": ["node_modules"]
  }
  
  